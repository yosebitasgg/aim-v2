---
// src/pages/casos-de-exito/[slug].astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import { caseStudies } from '../../data/caseStudies.js';

export const prerender = false;

export async function getStaticPaths() {
  return caseStudies.map(study => ({
    params: { slug: study.slug },
    props: { study },
  }));
}

// Get the case study based on the slug from the URL
const { slug } = Astro.params;
const study = caseStudies.find(s => s.slug === slug);

// If no study found, return 404
if (!study) {
  return new Response(null, { status: 404 });
}
---

<BaseLayout 
  title={study.headline || 'Caso de Éxito'} 
  description={`Caso de éxito de ${study.client || 'cliente'} en la industria de ${study.industry || 'industria'}.`}
>
  <!-- Hero Section -->
  <div class="bg-gradient-to-b from-teal-600 to-teal-700 text-white pt-24 pb-16">
    <div class="container mx-auto px-4 max-w-4xl">
      {study.industry && (
        <div class="inline-block px-3 py-1 bg-teal-500 text-white text-sm font-semibold rounded-full mb-6">
          {study.industry}
        </div>
      )}
      <h1 class="text-3xl md:text-5xl font-black leading-tight mb-6">
        {study.headline || 'Caso de Éxito'}
      </h1>
      {study.client && (
        <p class="text-xl text-teal-100">
          Cliente: <strong class="text-white">{study.client}</strong>
        </p>
      )}
    </div>
  </div>

  <!-- Main Content -->
  <div class="py-20 bg-white">
    <div class="container mx-auto px-4 max-w-4xl">
      
      <!-- Challenge Section -->
      {study.challenge && (
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-teal-800 mb-6">El Desafío</h2>
          <p class="text-lg text-teal-600 leading-relaxed">
            {study.challenge}
          </p>
        </div>
      )}

      <!-- Solution Section -->
      {study.solution && (
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-teal-800 mb-6">La Solución de AIM</h2>
          <p class="text-lg text-teal-600 leading-relaxed">
            {study.solution}
          </p>
        </div>
      )}

      <!-- Quote Section -->
      {study.quote && study.quote.text && (
        <div class="my-16 p-8 bg-gradient-to-r from-teal-50 to-teal-100 rounded-2xl border border-teal-200">
          <div class="flex items-start">
            <svg class="w-12 h-12 text-teal-600 flex-shrink-0 mr-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
            </svg>
            <div>
              <blockquote class="text-xl md:text-2xl font-medium text-teal-800 mb-4">
                "{study.quote.text}"
              </blockquote>
              {study.quote.author && (
                <cite class="block font-bold not-italic text-teal-600">
                  — {study.quote.author}
                </cite>
              )}
            </div>
          </div>
        </div>
      )}
      
      <!-- Results Section -->
      {study.results && study.results.length > 0 && (
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-teal-800 mb-8">Resultados Medibles</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {study.results.map(result => (
              <div class="bg-white p-6 border border-teal-200 rounded-xl text-center shadow-lg hover:shadow-xl transition-shadow">
                <p class="text-4xl font-black text-teal-600 mb-3">
                  {result.metric || '---'}
                </p>
                <p class="text-teal-700 font-medium">
                  {result.description || '---'}
                </p>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Navigation -->
      <div class="flex justify-between items-center pt-8 border-t border-teal-200">
        <a 
          href="/casos-de-exito" 
          class="inline-flex items-center text-teal-600 hover:text-teal-700 font-medium group transition-colors"
        >
          <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
          </svg>
          Ver Todos los Casos
        </a>
        
        <a 
          href="/contacto" 
          class="bg-teal-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-teal-700 transition-colors shadow-lg"
        >
          Solicitar Consulta
        </a>
      </div>
    </div>
  </div>

  <!-- Related CTA Section -->
  <div class="bg-teal-50 py-16">
    <div class="container mx-auto px-4 text-center max-w-3xl">
      <h2 class="text-3xl md:text-4xl font-bold text-teal-800 mb-6">
        Tu empresa puede lograr resultados similares
      </h2>
      <p class="text-lg text-teal-600 mb-8">
        Cada proceso automatizado es una oportunidad de crecimiento. Descubre cómo podemos ayudarte a identificar y capturar estas oportunidades.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/herramientas/calculadora-roi" 
          class="bg-white text-teal-600 font-bold py-3 px-6 rounded-lg hover:bg-teal-50 transition-colors border border-teal-200"
        >
          Calcular mi ROI
        </a>
        <a 
          href="/contacto" 
          class="bg-teal-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-teal-700 transition-colors"
        >
          Agendar Demo
        </a>
      </div>
    </div>
  </div>
</BaseLayout> 