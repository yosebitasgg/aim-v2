  function generarConclusionesROI(roiData) {
    const roi = roiData.roiPercentage || 0;
    const payback = roiData.paybackMonths || 0;
    
    let conclusion = '';
    
    if (roi >= 100) {
      conclusion = 'üéØ <strong>Inversi√≥n Altamente Recomendada:</strong> El ROI supera el 100% anual, indicando una rentabilidad excepcional.';
    } else if (roi >= 50) {
