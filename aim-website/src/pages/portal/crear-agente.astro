        </select>
      </div>
      
      <!-- Informaci√≥n de la Orden Seleccionada -->
      <div id="infoOrden" class="hidden mb-6">
        <div class="bg-gray-50 rounded-lg p-4">
          <h4 class="font-medium text-gray-900 mb-3">Informaci√≥n de la Orden</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <div class="space-y-2">
                <div><span class="font-medium">Cliente:</span> <span id="infoCliente"></span></div>
