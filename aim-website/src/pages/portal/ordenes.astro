  <script>
    // Función para cerrar el modal (compatible con el OrdersManager)
    function closeNewOrderModal() {
      // Usar el método del OrdersManager si está disponible
      if (window.ordersManager && window.ordersManager.hideCreateOrderModal) {
        window.ordersManager.hideCreateOrderModal();
      } else {
        // Fallback si el OrdersManager no está disponible
        const modal = document.getElementById('createOrderModal');
        if (modal) {
          modal.classList.add('hidden');
          document.body.classList.remove('overflow-hidden');
        }
      }
    }
    
    // Hacer la función global para compatibilidad
    window.closeNewOrderModal = closeNewOrderModal;
    
    // Configurar eventos una vez que el DOM esté listo
    document.addEventListener('DOMContentLoaded', function() {
      // Cerrar modal al hacer clic fuera
      const modal = document.getElementById('createOrderModal');
      if (modal) {
        modal.addEventListener('click', function(e) {
          if (e.target === this) {
            closeNewOrderModal();
          }
        });
      }
      
      // Cerrar modal con botones close
      const closeButtons = document.querySelectorAll('.close-modal');
      closeButtons.forEach(button => {
        button.addEventListener('click', closeNewOrderModal);
      });
    });
  </script>
