    // Funci√≥n para probar conectividad del backend
    async function testBackendConnection() {
      try {
        console.log('üîå Probando conectividad con el backend...');
        
        // Intentar una llamada simple a la API
        const response = await fetch('http://localhost:3001/api/documents/types', {
          method: 'GET',
          headers: window.documentsApi.getHeaders(),
          credentials: 'include'
        });
        
        console.log('üì° Estado de la respuesta:', response.status);
        
        if (response.ok) {
          console.log('‚úÖ Backend conectado correctamente');
          return true;
        } else if (response.status === 401) {
          console.warn('‚ö†Ô∏è Backend conectado pero token de autenticaci√≥n inv√°lido');
          return false;
        } else {
          console.warn('‚ö†Ô∏è Backend respondi√≥ con error:', response.status);
          return false;
        }
      } catch (error) {
        console.error('‚ùå No se pudo conectar al backend:', error);
        return false;
      }
    }

    // Inicializar la p√°gina cuando el DOM est√© listo
    document.addEventListener('DOMContentLoaded', async function() {
      try {
        console.log('üöÄ Inicializando p√°gina de documentos...');
        
        // Esperar un poco para asegurar que todos los scripts se carguen
