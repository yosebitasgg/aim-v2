    // Funci√≥n para calcular el tiempo estimado total de una fase
    function getTotalEstimatedTime(docs) {
      if (!docs || docs.length === 0) return '0 d√≠as';
      
      let totalDays = 0;
      
      docs.forEach(doc => {
        const timeStr = doc.estimatedTime || '1 d√≠a';
        const match = timeStr.match(/(\d+)(-(\d+))?/);
        if (match) {
          const min = parseInt(match[1]);
          const max = match[3] ? parseInt(match[3]) : min;
          totalDays += (min + max) / 2;
        }
      });
      
      if (totalDays === 0) return '0 d√≠as';
      if (totalDays < 1) return '< 1 d√≠a';
      if (totalDays === 1) return '1 d√≠a';
      
      return Math.round(totalDays) + ' d√≠as';
    }

